-		"run update_to_fit;"	\
-	"fi;"	\
 	"run findfdt; " \
-	"run envboot; " \
-	"run mmcboot;" \
+	"setenv devtype mmc; " \
+	"setenv mmcblk 1; " \
+	"setenv mmcdev 0; " \
+	"run boot;" \
+	"setenv mmcblk 0; " \
 	"setenv mmcdev 1; " \
